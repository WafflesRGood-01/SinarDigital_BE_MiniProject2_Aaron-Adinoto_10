datasource db {
  provider = "sqlite"
  url      = env("DATABASE URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  image       String?
  imageUrl    String?   
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
}